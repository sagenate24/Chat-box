{
    "extends": [ "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "globals": {
        "document": false,
        "navigator": false,
        "window": false
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": [
            0
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        
        "eol-last": [
            "error",
            "always"
        ],
        "semi-spacing": [
            "error"
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "./*.js",
                "test/*.js"
            ],
            "excludedFiles": "js/*.js"
        }
    ]
}